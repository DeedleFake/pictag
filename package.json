{
  "name": "pictag",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun build --outdir=./internal/ui/assets --minify --sourcemap --chunk-naming=[name].[ext] --asset-naming=[name].[ext] ./ui/index.html",
    "fmt": "prettier --write ui package.json"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest",
    "bun-plugin-tailwind": "^0.1.2",
    "prettier": "^3.8.1",
    "prettier-plugin-jsdoc": "^1.8.0",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.11"
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-jsdoc"
    ]
  }
}
