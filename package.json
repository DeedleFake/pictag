{
  "name": "pictag",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run build.ts",
    "dev": "bun run --watch build.ts",
    "fmt": "prettier --write ui package.json build.ts"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest",
    "bun-plugin-tailwind": "^0.1.2",
    "prettier": "^3.8.1",
    "prettier-plugin-jsdoc": "^1.8.0",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.11"
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-jsdoc"
    ]
  },
  "dependencies": {
    "react-router": "^7.13.0",
    "react-select": "^5.10.2"
  }
}
