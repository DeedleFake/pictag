{
  "name": "pictag",
  "version": "0.1.0",
  "description": "",
  "main": "./assets/index.js",
  "scripts": {
    "build": "pnpm build:css && pnpm build:js",
    "build:css": "tailwindcss -i ./assets/index.css -o ./internal/assets/index.css",
    "build:js": "esbuild --bundle ./assets/index.js --outfile=./internal/assets/index.js --minify --sourcemap",
    "dev": "esbuild --bundle ./assets/index.js --outfile=./internal/assets/index.js --minify --sourcemap --watch",
    "fmt": "prettier --write assets package.json"
  },
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.4",
    "esbuild": "^0.25.2",
    "prettier": "^3.5.3",
    "prettier-plugin-jsdoc": "^1.3.2",
    "tailwindcss": "^4.1.4"
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-jsdoc"
    ]
  }
}
